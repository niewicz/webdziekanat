<div id="message-holder" class="grid grid-center">
  <% if notice %>
    <div class="grid-item 3/4 compact-1/1 box message-box message-normal">
      <p><%= notice %></p>
    </div>
  <% end %>

  <% if alert %>
    <div class="grid-item 3/4 compact-1/1 box message-box message-critical">
      <p><%= alert %></p>
    </div>
  <% end %>
</div>